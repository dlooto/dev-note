function grayInputText(inputObj) {
    var defVal = inputObj.val();

    inputObj.bind({
        focus: function() {
            var _this = $(this);
            if (_this.val() == defVal) {
                _this.val('');
            } else {
                inputObj.css("color", "#000");
            }
        },
        blur: function() {
            var _this = $(this);
            if (_this.val() == '') {
                _this.val(defVal);
                //_this.css("col");
            }
        },
        change: function() {
            alert('Handler for .change() called.');
        }
    });
}

